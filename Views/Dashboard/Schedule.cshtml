@{
    Layout="~/Views/Shared/_LayoutAdmin.cshtml";
}
@model IEnumerable<Schedule>


<h1>@ViewData["Title"]</h1>
<link href="~/css/AdminCss/base.css" rel="stylesheet" type="text/css" />

<div class="container-fluid ">
    <div class="row mt-5">
        <div class="col text-start">
            <!-- Trigger button -->
            <button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#categoryModal">
                Create Schedule
            </button>
        </div>
        <!-- Modal -->
        <div class="modal fade" id="categoryModal" tabindex="-1" aria-labelledby="categoryModalLabel" aria-hidden="true">
            <div class="modal-dialog modal-dialog-centered">
                <div class="modal-content">
                    <div class="modal-header">
                        <h5 class="modal-title" id="categoryModalLabel">Create Schedule</h5>
                        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                    </div>
                    <div class="modal-body">
                        <form action="CreateCategorie" method="post" enctype="multipart/form-data">
                            
                            <div class="mb-3">
                                <!-- Name Field -->
                                <label for="date" class="form-label">Select a Date:</label>
                                <input type="datetime-local" class="form-control border-primary shadow-none" min="2034-01-01T00:00" max="2035-12-31T23:59" id="DateTime" name="DateTime" required>
                            </div>
                            <div class="mb-3">
                                <label for="stadium" class="form-label">Choose a Stadium:</label>
                                <select id="stadium" name="stadium" class="form-select" required>
                                    <option value="">Select Stadium</option>
                                    @foreach (var stadium in ViewBag.Stadiums)
                                    {
                                        <option value="@stadium.Id">@stadium.Name</option>
                                    }
                                </select>
                            </div>
                            <!-- Submit and Cancel Buttons -->
                            <div class="d-flex justify-content-center mt-3">
                                <button type="submit" class="btn btn-primary">Submit</button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>



    </div>
    
    <div class="row mt-5">
        @foreach (var cata in Model)
        {
            <div class="col-lg-3 col-md-4 col-sm-12 d-flex flex-column align-items-center mb-4">
                <div class="card-container position-relative w-100">
                    <!-- Buttons (always visible at top-right) -->
                    <div class="action-buttons position-absolute top-0 end-0 m-2">
                        <button class="btn me-2 mt-1 btn-custom" data-tooltip="Delete" >
                            <i class="fa-solid fa-trash fa-xs"></i>
                        </button>
                        <button class="btn mt-1 btn-custom" data-tooltip="Edit" >
                            <i class="fa-regular fa-pen-to-square fa-xs"></i>
                        </button>
                    </div>
                    <!-- Card -->
                    @* <a asp-action="@cata.Url" class="text-decoration-none">
                        <div class="card d-flex flex-column h-100 custom-card-index">
                            <!-- Card Image -->
                            <img 
                                src="~/images/@cata.Image" 
                                class="card-img-top rounded" 
                                alt="@cata.Name" 
                                style="object-fit: cover; height: 200px;"
                            >
                            <!-- Card Body -->
                            <div class="card-body d-flex flex-column text-center">
                                <h5 class="card-title">@cata.Name</h5>
                            </div>
                        </div>
                    </a> *@
                </div>
            </div>



        }
    </div>
</div>